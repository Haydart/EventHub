<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/calendar_list_item_height"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/loading_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/day_short_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_margin_medium"
            android:layout_marginRight="@dimen/standard_margin_medium"
            android:layout_marginTop="@dimen/standard_margin_small"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"

            tools:text="PON" />

        <TextView
            android:id="@+id/day_of_month_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_margin_medium"
            android:textAppearance="?attr/textAppearanceListItem"

            android:textStyle="bold"
            tools:text="17" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/organizer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin_small"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            tools:text="Klub AA" />

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin_small"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            tools:text="Spotkanie AA" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_margin_small"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="22-04-2017" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin_small"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Bistro Bravo" />

            <TextView
                android:id="@+id/distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_margin_small"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="DALEKo" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <pl.rmakowiecki.eventhub.ui.custom_view.ActionButton
            android:id="@+id/attend_event_action_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_button_height"
            android:layout_gravity="center"
            app:button_shape="pill"
            app:default_color="@color/colorPrimary"
            app:failure_color="@color/failure_red"
            app:failure_icon="@drawable/icon_failure_action_button"
            app:inactive_button_alpha="1.0"
            app:success_color="@color/success_green"
            app:success_icon="@drawable/icon_success_action_button"
            app:text_color="@android:color/white" />
    </LinearLayout>

</LinearLayout>

