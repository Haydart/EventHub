<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp">

    <ImageView
        android:id="@+id/event_category_image"
        android:layout_width="128dp"
        android:layout_height="64dp"
        android:src="@color/colorAccent" />

    <ImageView
        android:id="@+id/check_image_view"
        android:layout_width="@dimen/preferences_card_check_height"
        android:layout_height="@dimen/preferences_card_check_height"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/event_category_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="Category name" />
</FrameLayout>