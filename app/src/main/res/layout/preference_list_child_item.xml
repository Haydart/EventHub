<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGray">

    <TextView
        android:id="@+id/preference_interest_list_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preference_category_name" />

    <CheckBox
        android:id="@+id/preference_interest_list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="@string/preference_interest_checkbox_text" />

</LinearLayout>
