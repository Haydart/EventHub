<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.rmakowiecki.eventhub">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".EventHubApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAGoSHs_fLSza280Wt5FR55jWrH81gnQL4" />

        <activity
            android:name=".ui.start_screen.AuthActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.preferences_screen.PreferenceActivity"
            android:parentActivityName=".ui.events_map_screen.EventsMapActivity"
            android:label="@string/title_preferences"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.preferences_screen.PreferenceDetailsActivity"
            android:theme="@style/CategoryDetailsTheme"
            android:parentActivityName=".ui.preferences_screen.PreferenceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.events_map_screen.EventsMapActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.start_screen.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="pl.rmakowiecki.eventhub.background.FetchAddressIntentService"
            android:exported="false"></service>
    </application>

</manifest>